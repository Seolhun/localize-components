{
  "license": "MIT",
  "name": "@seolhun/localize-components-atomic",
  "description": "Localizing React components is rendered by stand-alone not affect other styles.",
  "version": "0.0.11",
  "main": "./src/index.ts",
  "files": [
    "dist/",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "node build/build.js",
    "bundle": "yarn style:clean && tsc && yarn style && yarn style:local",
    "style": "sass --update src:../../dist/packages/localize-components-atomic/src/ --style compressed",
    "style:watch": "sass --watch src:dist/src --style compressed",
    "style:local": "sass --update src:src --style compressed",
    "style:clean": "find . -name *.css* -type f -delete",
    "test": "jest",
    "test-with-coverage": "jest --coverage && cat ./coverage/lcov.info | codacy-coverage"
  },
  "dependencies": {
    "@seolhun/localize-components-types": "^0.0.11",
    "@seolhun/localize-components-utils": "^0.0.11",
    "@types/jest": "^23.3.2",
    "@types/react": "^16.7.2",
    "@types/react-dom": "^16.0.9",
    "classnames": "^2.2.6",
    "jest": "^23.6.0",
    "prop-types": "^15.6.2",
    "react": "^16.6.1",
    "react-dom": "^16.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-arrow-functions": "^7.0.0",
    "@babel/plugin-transform-async-to-generator": "^7.1.0",
    "@babel/plugin-transform-classes": "^7.1.0",
    "@babel/plugin-transform-destructuring": "^7.1.3",
    "@babel/plugin-transform-literals": "^7.0.0",
    "@babel/plugin-transform-spread": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.5",
    "@babel/preset-react": "^7.0.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-styled-components": "^1.8.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6"
  },
  "peerDependencies": {
    "react": "^16.6.1",
    "react-dom": "^16.4.0"
  },
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 3.0.0"
  }
}
