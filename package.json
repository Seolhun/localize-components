  "main": "./src/index.ts",
  "scripts": {
    "link": "lerna link",
    "clean": "lerna clean --yes",
    "clear": "lerna run clear",
    "build": "lerna run build",
    "test": "lerna run test",
    "bs": "lerna bootstrap --hoist",
    "prerelease": "lerna publish from-git",
    "release": "lerna publish patch -y",
    "release:a": "lerna publish prepatch --dist-tag alpha",
    "release:b": "lerna publish prepatch --preid beta --dist-tag beta",
    "lint": "lerna run lint",
    "lint:fix": "eslint --fix '**/*.{ts,tsx,js,jsx}'",
    "prettier": "prettier --write '**/*.{ts,tsx,js,jsx}'",
    "fix": "yarn prettier && yarn lint:fix",
    "deploy:ex": "surge packages/examples/dist/ http://localize-components-examples.surge.sh",
    "deploy:ex:dev": "surge packages/examples/dist/ http://dev.localize-components-examples.surge.sh",
    "deploy:docs": "surge packages/docs/dist/ http://localize-components-docs.surge.sh",
    "deploy:docs:dev": "surge packages/docs/dist/ http://dev.localize-components-docs.surge.sh"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.13.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.1",
    "lerna": "^3.20.2",
    "prettier": "^2.0.0",
    "surge": "^0.21.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 3.0.0"
  },
  "version": "0.0.9",
  "name": "localize-components"
